{
  "name": "2-clientandserver",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist_server/server.js",
    "dev": "vite",
    "dev-server": "tsx src/server/server.ts",
    "dev-prod": "concurrently \"npm run dev-prod-server\" \"npm run dev-prod-client\"",
    "dev-prod-server": "concurrently \"tsc --watch --p tsconfig.server.json\" \"nodemon ./dist_server/server\"",
    "dev-prod-client": "tsc-watch --onSuccess \"vite build\"",
    "dev-prod0": "npm run build-client && npm run build-server && npm start",
    "build-client": "tsc && vite build",
    "build-server": "tsc --p tsconfig.server.json",
    "build": "npm run build-client && npm run build-server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.6.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0"
  }
}
